{% if pages > 1 %}
    <nav>
        <ul class="pagination">
            {% if currentPage > 1 %}
                 <li class="page-item">
                    <a class="page-link" href="{{path(path, {slug: trick.slug, page: currentPage - 1} ) }}">
                        <i class="fa-solid fa-arrow-right fa-xl" style="color: #000000;"></i>
                    </a>
                </li>
                {% else %}
                <li class="page-item disabled">
                    <a class="page-link">
                        <i class="fa-solid fa-arrow-right fa-xl" style="color: #000000;"></i>
                    </a>
                </li>
                {% endif %}
         

            {% for page in 1..pages %}
                <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                    <a class="page-link" href="{{path(path, {slug: trick.slug, page: page} ) }}">
                        {{ page }}
                    </a>
                </li>
            {% endfor %}

            {% if currentPage < pages %}
                <li class="page-item">
                    <a class="page-link" href="{{path(path, {slug: trick.slug, page: currentPage + 1} ) }}">
                        <i class="fa-solid fa-arrow-left fa-xl" style="color: #000000;"></i>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                     <a class="page-link">
                        <i class="fa-solid fa-arrow-left fa-xl" style="color: #000000;"></i>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
