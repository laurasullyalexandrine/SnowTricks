{% extends 'base.html.twig' %}	

{% block body %}
	<article class="row d-flex">
		<section class="d-flex justify-content-center mt-4 text-center">
			{% if trick.picture == 'snowboard-home.png' %}
				<div class="border border-2 rounded p-3">
					<img src="{{ asset('image/' ~ trick.picture) }}" class="trick-image text-center" alt="trick-picture">
				</div>
				<h1 class="display-4 position-absolute top-25 start-50 translate-middle trick-name p-3"  style="background-color:#38ada9;">{{ trick.name }}</h1>
			{% elseif trick.picture matches '{^https}' %}
				<div class="border border-2 rounded p-3">
					<img src="{{ trick.picture }}" alt="trick-picture" style="max-width:60rem;">
				</div>
				<h1 class="display-4 position-absolute top-25 start-50 translate-middle trick-name p-3"  style="background-color:#38ada9;">{{ trick.name }}</h1>
			{% else %}
				<div class="border border-2 rounded p-3">
					<img src="{{ asset('uploads/picture/' ~ trick.picture) }}" alt="trick-picture" style="max-width: 16rem; max-height: 16rem;">
				</div>
				<h1 class="display-4 position-absolute top-25 start-50 translate-middle trick-name p-3"  style="background-color:#38ada9;">{{ trick.name }}</h1>
			{% endif %}
		</section>

		<section class="d-flex py-3" style="background-color: #3c6382;">
			<p class="fs-5">{{ trick.description }}</p>
	    </section>
		
		{% if app.user and app.user.isverified == true %}
			<div>
				<a class="btn fs-5 my-4" href="{{ path('trick_create') }}">Nouvelle figure</a>
			</div>
		{% endif %}

		<section class="d-flex flex-wrap my-4 py-3 border border-2 rounded">
			{% if trick.picture != null %}
				<div class="card" style="max-width: 20rem;">
					<img src="{{ trick.picture }}" alt="trick-picture">
				</div>
			{% endif %}

			{% if trick.video != null  %}
				<div class="card" style="max-width: 20rem;">
					<img src="{{ trick.video}}" alt="trick-video">
				</div>
			{% endif %}	
			{# TODO: comment faire pour avoir plusieurs images et vidéos pour un seul objet ? #}
	    </section>

		<section class="d-flex text-light py-3" style="background-color: #0a3d62;">
			{# <p class="fs-5 me-4"><time datetime="{{ trick.createdAt|date('d-m-Y') }}">{{ trick.createdAt|date('d-m-Y') }}</time></p>
			{% if trick.updatedAt is not empty %}
				<p class="fs-5 me-4"><time datetime="{{ trick.updatedAt|date('d-m-Y') }}">{{ trick.updatedAt|date('d-m-Y') }}</time></p>
			{% endif %} #}
			<p class="fs-5">{{ trick.trickGroup }}</p>
	    </section>
		{% if app.user and app.user.isverified == true %}
			<section class="d-flex py-3" style="background-color: #38ada9;">
				<p class="fs-4">Section commentaires User connecté</p>
				<p class="fs-4">Ajouter le formulaire de publication de commentaire</p>
				<p class="fs-4">Les commentaires publié et validés par ordre desc</p>
			</section>
		{% endif %}
    </article>
{% endblock %}
