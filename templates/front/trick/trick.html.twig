{% extends 'base.html.twig' %}

{% block body %}
	{% if app.user and app.user.isverified == true %}
		<div class="d-flex block-edit-delete text-center">
			<a class="btn-edit me-3" href="{{ path('trick_edit', { slug: trick.slug } )}}">
				<i class="fa-solid fa-pen fa-xl" style="color: #030303;"></i>
			</i>
		</a>
		{{ include('front/trick/_delete_form.html.twig') }}
		</div>
	{% endif %}

	<article class="row d-flex flex-column">
		{# Block main title and image #}
		<h1 class="position-absolute top-25 end-0">
			<span class="trick-name fs-1 mt-lg-3 position-absolute top-0 start-50 translate-middle badge">{{ trick.name }}</span>
		</h1>
		<div>
			<img id="main-image" class="mw-100" src="{{ asset( trick.mainImage ) }}" healt="image-snowboard-{{ trick.name }}"/>
		</div>

		{# Block medias #}
		<section class="mb-3 py-3 bg-dark d-none d-sm-none d-md-block d-lg-block">
			{% for media in trick.medias %}
				{% if media.type == constant('App\\Entity\\Media::TYPE_IMAGE') %}
					<div class="d-flex flex-wrap justify-content-center me-2">
						{# TODO: mettre les tailles dans le css #}
						<img class="mw-100 rounded" src="{{ asset( media ) }}" width="250px" alt="image-snowboard-{{ trick.name }}"/>
					</div>
				{% elseif media.type == constant('App\\Entity\\Media::TYPE_VIDEO') %}
					<div class="d-flex flex-wrap justify-content-center me-2">
						<video controls src="{{ asset( media ) }}" style="width: 250px"></video>
					</div>
				{% endif %}
			{% endfor %}
		</section>

		{# Block medias responsive #}
		<section class="d-flex justify-content-center bg-dark d-block d-sm-block d-md-none d-lg-none">
			<div class="text-center my-3">
				<a data-bs-toggle="collapse" href="#media" aria-expanded="false" aria-controls="media"></a>
				<button class="btn" type="button" data-bs-toggle="collapse" href="#media" aria-expanded="false" aria-controls="media">M√©dia{% if trick.medias|length > 1 %}s{% endif %}</button>
			</div>
		</section>
		<section class="d-flex flex-wrap justify-content-center mb-3 py-3 bg-dark d-block d-sm-block d-md-none d-lg-none">
			<div class="collapse" id="media">
				{% for media in trick.medias %}
					<div class="me-2">
						<img class="mw-100 rounded" src="{{ asset('upload/image/' ~ media.name ) }}" width="250px" alt="image-snowboard-{{ trick.name }}"/>
					</div>
				{% endfor %}
			</div>
		</section>

		{# Block description #}
		<section class="d-flex justify-content-center mb-3">
			<div class="text-center fs-4 w-75 p-3">
				{{ trick.description }}
			</div>
		</section>


		{# Block tags #}
		<section class="d-flex justify-content-center">
			<ul class="d-flex flex-row">
				<li class="text-center fs-5 me-3 p-2 text-light bg-dark rounded">
					Auteur
					{{ trick.tags.author|capitalize }}
				</li>
				<li class="text-center fs-5 me-3 p-2 text-light bg-dark rounded">
					Date de cr√©ation
					{{ trick.tags.createdAt|format_datetime('short', 'none', locale='fr') }}
				</li>
				{% if trick.tags.updatedAt is not empty %}
					<li class="text-center fs-5 me-3 p-2 text-light bg-dark rounded">
						Date de mise √† jour
						{{ trick.tags.updatedAt|format_datetime('short', 'none', locale='fr') }}
					</li>
				{% endif %}
				<li class="text-center fs-5 me-3 p-2 text-light bg-dark rounded">
					Groupe de figure
					{{ trick.tags.trickGroup }}
				</li>
			</ul>
		</section>

		{# Block ajout de commentaire #}
			{% if app.user and app.user.isverified == true %}
		<section class="d-flex flex-column justify-content-center mt-4 p-3 bg-dark">
				{{ form_start(form) }}

				{% set errors = form_errors(form) %}
				{% if errors is empty %}
					<div>
						{{form_errors(form)  }}
					</div>
				{% else %}
					<div class="alert alert-danger">
						{{form_errors(form)  }}
					</div>
				{% endif %}
				<div class="d-flex flex-wrap justify-content-center my-3">
					<div class="w-50 mx-5">
						{{ form_row(form.content, {label: ' '}) }}
					</div>

					<div class="m-4 align-self-end">
						<button type="submit" class="btn my-3">
							{% trans %}Laisses un commentaire{% endtrans %}</button>
						{{ form_end(form) }}
					</div>
				</div>
		</section>
			{% endif %}

		{# Block commentaires #}
		{% if comments is empty %}
			<p class="text-center fs-4 my-5">
				Cette figure de snowboard n'a pas encore de commentaire. <br>
				A ton clavier ‚å®Ô∏è.
			</p>
		{% else %}
			{% for comment in comments.data %}
				{% if comment.status != 1 %}
					<p class="text-center fs-4 my-5">
						Patience... Tu pourras bient√¥t lire tous les commentaires valid√©s de nos abonn√©s.<br>
						Laisses nous aussi un commentaire üòÉ.
					</p>
				{% else %}
					<section class="d-flex flex-row justify-content-center">
						<div class="mx-3 p-3">
							{% if comment.users.avatar == null %}
								<img src="{{ asset('image/avatar.png') }}" alt="user-avatar">
							{% else %}
								<img src="{{ asset('upload/avatar/' ~ comment.users.avatar) }}" height="60px"  alt="user-avatar">
							{% endif %}
						</div>
						<div class="mx-3 my-2 p-3">
							<ul class="list-group list-group-horizontal">
								<li class="list-group-item">{{ comment.content }}</li>
								<li class="list-group-item">Auteur
									<span class="fw-semibold">{{ comment.users }} </span>
								</li>
								<li class="list-group-item">Cr√©√© le
									<span class="fw-semibold">
										{{ comment.createdAt|format_datetime('short', 'none', locale='fr') }}
									</span>
								</li>
							</ul>
						</div>
					</section>
				{% endif %}
			{% endfor %}
		{% endif %}

		{# Initiaser les variables pour la pagination #}
		{% if comments is not empty %}
			{% set path = 'trick_slug' %}
			{% set slug = trick.slug %}
			{% set pages = comments.pages %}
			{% set currentPage = comments.firstResult %}
			<div class="d-flex justify-content-center">
				{% include "_partial/_paging.html.twig" %}
			</div>
		{% endif %}
		{# Block commentaires ++ #}
		<div class="collapse" id="comment">
			{% if comments|length > 10 %}
				<div class="text-center mb-3">
					<a data-bs-toggle="collapse" href="#comment" aria-expanded="false" aria-controls="comment"></a>
					<button class="btn" type="button" data-bs-toggle="collapse" href="#comment" aria-expanded="false" aria-controls="comment">Plus de commentaire{% if comments|length > 1 %}s{% endif %}</button>
				</div>
				{% for comment in comments|slice(11, comments|length) %}
			
					{% if comment.status == 1 %}
						<section class="d-flex flex-row justify-content-center">
							<div class="mx-3 p-3">
								{% if comment.users.avatar is empty %}
									<img src="{{ asset('image/avatar.png') }}" alt="user-avatar">
								{% else %}
									<img src="{{ asset('upload/avatar/' ~ comment.users.avatar) }}" height="60px" alt="user-avatar">
								{% endif %}
							</div>

							<div class="mx-3 my-2 p-3">
								<ul class="list-group list-group-horizontal">
									<li class="list-group-item">{{ comment.content }}</li>
									<li class="list-group-item">Auteur
										<span class="fw-semibold">{{ comment.users }} </span>
									</li>
									<li class="list-group-item">Cr√©√© le
										<span class="fw-semibold">
											{{ comment.createdAt|format_datetime('short', 'none', locale='fr') }}
										</span>
									</li>
								</ul>
							</div>
				{% endif %}
			{% endfor %}
		{% endif %}
		</div>
	</article>
{% endblock %}